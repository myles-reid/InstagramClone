@using InstagramClone.Models
@model Post

@{
	ViewData["Title"] = "New Post";
	User user = (User)TempData["ActiveUser"];
}

<h2>New Post</h2>

<form asp-action="NewPost">
	<input type="hidden" asp-for="UserId" value="@user.UserId" />
	<div class="form-group">
		<label asp-for="ImageUrl" class="lead"><strong>Add image file path</strong></label>
		<input asp-for="ImageUrl" class="form-control" />
		<span asp-validation-for="ImageUrl" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Caption" class="lead"><strong>Caption</strong></label>
		<input asp-for="Caption" class="form-control" />
	</div>
	<button type="submit" class="btn btn-success">Create</button>
</form>